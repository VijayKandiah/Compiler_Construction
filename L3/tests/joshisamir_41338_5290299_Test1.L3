// Array operations: Max, Min, Sum

define :getMax(%array) {
    %i <- 0
    %maxValue <- -1
    %currPointer <- %array
    %arrayLength <- load %currPointer

    :loop
        %currPointer <- %currPointer + 8
        %currValue <- load %currPointer
        %isGreaterThanMaxValue <- %maxValue < %currValue
        br %isGreaterThanMaxValue :assign
        br :continue

    :assign
        %maxValue <- %currValue

    :continue
        %i <- %i + 1
        %isIteratorLessThanArrayLength <- %i < %arrayLength
        br %isIteratorLessThanArrayLength :loop
        br :terminate

    :terminate
        return %maxValue
}

define :getMin(%array) {
    %i <- 0
    %minValue <- 999999
    %currPointer <- %array
    %arrayLength <- load %currPointer

    :loop
        %currPointer <- %currPointer + 8
        %currValue <- load %currPointer
        %isLessThanMinValue <- %currValue < %minValue
        br %isLessThanMinValue :assign
        br :continue

    :assign
        %minValue <- %currValue

    :continue
        %i <- %i + 1
        %isIteratorLessThanArrayLength <- %i < %arrayLength
        br %isIteratorLessThanArrayLength :loop
        br :terminate

    :terminate
        return %minValue
}

define :getSum(%array) {
    %i <- 0
    %sum <- 1
    %currPointer <- %array
    %arrayLength <- load %currPointer

    :loop
        %currPointer <- %currPointer + 8
        %currValue <- load %currPointer

        %sum <- %sum - 1
        %sum <- %sum >> 1
        %currValue <- %currValue - 1
        %currValue <- %currValue >> 1

        %sum <- %sum + %currValue
        %sum <- %sum << 1
        %sum <- %sum + 1

    :continue
        %i <- %i + 1
        %isIteratorLessThanArrayLength <- %i < %arrayLength
        br %isIteratorLessThanArrayLength :loop
        br :terminate

    :terminate
        return %sum
}

